{
    "name": "blacklabelcreative",
    "description": "The black label creative website",
    "version": "3.3.0",
    "author": "Jasal Vadgama - http://blacklabelcreative.com/",
    "repository": {
        "type": "git",
        "url": "git://github.com/donofkarma/html-css-js-template.git"
    },
    "main": "/",
    "scripts": {
        "clean": "rimraf _site",

        "copy:data": "mkdir -p ./_site/assets/data && cp -r ./src/data/ ./_site/assets/data/",
        "copy:images": "mkdir -p ./_site/assets/images && cp -r ./src/images/public/ ./_site/assets/images/",

        "build:html": "jekyll build",
        "build:css": "./node_modules/.bin/node-sass ./src/sass/ --output ./_site/assets/css/",

        "prebuild": "npm run clean",
        "build": "npm run build:html && npm run build:css",
        "postbuild": "npm run copy:data && npm run copy:images",

        "deploy:css": "./node_modules/.bin/cleancss -o ./_site/assets/css/style.css ./_site/assets/css/style.css",

        "predeploy": "npm run build",
        "deploy": "npm run deploy:css",

        "watch:html": "jekyll serve",
        "watch:css": "./node_modules/.bin/node-sass ./src/sass/ --output ./_site/assets/css/ --watch",

        "prewatch": "npm run build",
        "watch": "parallelshell 'npm run watch:html' 'npm run watch:css'"
    },
    "engines": {
        "node": ">= 4.2.6"
    },
    "devDependencies": {
        "clean-css": "3.4.x",
        "node-sass": "3.4.x",
        "parallelshell": "2.0.x",
        "rimraf": "2.5.x"
    }
}
